{
    "manifest_version": 3,
    "name": "VoiceControl Browser",
    "version": "1.0.0",
    "description": "Control your browser with your voice using the Web Speech API.",
    "permissions": [
        "tabs",
        "activeTab",
        "scripting",
        "storage",
        "tts"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "VoiceControl Browser",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles/content.css"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}